{
    "model": "gta3",
    "dataset": "neighborsmatch",
    "model_params": {
        "hidden_dim": 64,
        "out_dim": 64,
        "phi": "inverse_hops",
        "alpha": "per_layer",
        "alpha_init": 1,
        "alpha_weight": 0,
        "num_heads": 4,
        "num_layers": 4,
        "pos_encoding": "none",
        "pos_enc_dim": 8,
        "residual": true,
        "batch_norm": false,
        "layer_norm": true,
        "attention_bias": true
    },
    "train_params": {
        "lr": 1e-3,
        "weight_decay": 0.0,
        "max_epochs": 30,
        "seed": 0,
        "batch_size": 4,
        "tree_depth": 2,
        "lr_reduce_factor": 0.5,
        "lr_schedule_patience": 2,
        "lr_threshold": 1e-5
    },
    "logging": {
        "save_dir": "logs/nbm",
        "name": "initial_nbm"
    }
}